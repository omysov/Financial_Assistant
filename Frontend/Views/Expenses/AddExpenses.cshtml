@model ExpensesDto

<form asp-action="AddExpenses" method="post">
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Coupon Code</label>
        <input asp-for="Date" type="text" class="form-control" id="formGroupExampleInput" placeholder="20OFF">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Discount Amount</label>
        <input asp-for="Count" type="text" class="form-control" id="formGroupExampleInput2" placeholder="30">
        <span asp-validation-for="Count" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Minimum Amount</label>
        <input asp-for="Description" type="text" class="form-control" id="formGroupExampleInput2" placeholder="20">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <a asp-action="HomeIndex" role="button" class="btn btn-primary btn-lg">Back to Home</a> <!--Выделение + Tab и Tab + Shift-->
    <input class="btn btn-primary btn-lg" type="submit" value="Create">
</form>