@model LoginRequestDto
<head runat="server">
<script src="~/js/LoginGetToken.js" type="text/javascript"></script>
</head>
<form id="login-form" method="post">
	<div class="container border p-4">
		<div class="row text-center">
			<h1>Login</h1>
		</div>
		<div class="row text-center">
			<!--<div asp-validation-summary="All" class="text-danger"></div>-->
		</div>
		<div class="row">
			<div class="col-12 col-md-6 offset-3 pb-2">
				<input asp-for="UserName" class="form-control" placeholder="Username..." id="UserName"/>
			</div>
			<div class="col-12 col-md-6 offset-3 pb-2">
				<input asp-for="Password" class="form-control" placeholder="Password..." id="Password"/>
			</div>
			<div class="col-12 col-md-6 offset-3 pb-2">
				<button type="submit" class="form-control btn-success" value="Submit">Login</button>
			</div>
		</div>
	</div>
</form>
