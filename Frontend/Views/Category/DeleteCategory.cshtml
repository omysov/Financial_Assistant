@model CategoryDto

<h2>Delete category</h2>
<h3>You will delete all expenses in this category</h3>
<form asp-controller="Category" asp-action="DeleteCategory" method="post">
    <input asp-for="Id" hidden />
    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Name Category</label>
        <h3>Category name: @Model.Name</h3>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <a asp-controller="Home" asp-action="" role="button" class="btn btn-primary btn-lg">Back to Home</a> <!--Выделение + Tab и Tab + Shift-->
    <input class="btn btn-primary btn-lg" type="submit" value="Delete">
</form>